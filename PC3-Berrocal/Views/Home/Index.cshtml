@model List<Producto>
    @{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Lista de Productos Registrados</h1>

<br><br>
    @if (Model.Count == 0)
           {
             <div class="position-relative">
                <div style="color: blue;" class="text-center"><h2>Aún no se ha registrado ningun producto, por favor selecciona la opcion "Agregar_Productos" en el menu superior y registra todos los productos que desees visualizar</h2></div>
             </div>
              
          }

    
</div>

    <div class="container">
        <div class="row">

        @foreach (var productos in Model)
        {


        <div class="col-sm">
            <div class="card" style="width: 18rem;">
              <img src="@productos.Url" class="card-img-top" width="150"px height="150"px>
              <div class="card-body">
                <h5 class="card-title">@productos.Nombre_Producto</h5>

                <label>Descripcion:@productos.Descripcion</label><br>
                <label>Precio:@productos.Precio_Total</label><br>
                <label>Celular:@productos.Celular</label><br>
                <label>Lugar:@productos.Lugar</label><br>
                <label>Usuario:@productos.Nombre_Usuario</label><br>
              </div>
            </div>

        </div>

 


        }
        </div>
    </div>
